@article{balitsky_analyzing_2018,
	title = {Analyzing the {Near}-{Field} {Effects} and the {Power} {Production} of an {Array} of {Heaving} {Cylindrical} {WECs} and {OSWECs} {Using} a {Coupled} {Hydrodynamic}-{PTO} {Model}},

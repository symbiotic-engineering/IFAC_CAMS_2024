@article{trueworthy_wave_2020,
	title = {The {Wave} {Energy} {Converter} {Design} {Process}: {Methods} {Applied} in {Industry} and {Shortcomings} of {Current} {Practices}},
	volume = {8},
	copyright = {http://creativecommons.org/licenses/by/3.0/},
	issn = {2077-1312},
	shorttitle = {The {Wave} {Energy} {Converter} {Design} {Process}},

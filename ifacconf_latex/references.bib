@article{sykes_flexible_2022,
	title = {A {Flexible}, {Multi}-fidelity {Levelised} {Cost} of {Energy} {Model} for {Floating} {Offshore} {Wind} {Turbines} {Multidisciplinary} {Design}, {Analysis} and {Optimisation} {Approaches}},
